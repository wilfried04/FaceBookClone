<h1>Liste des blogs</h1>
<p class ="notice"><%= notice %></p>
<table>
  <tr> 
    <th class="content">Content</th>
    <th class= "created_at">Post</th>

  </tr>
<% @blogs.each do |blog| %>
  <tr> 
    <td class= "content"><%= blog.content %></td>
    <td class= "created_at"><%= l(blog.created_at, format: :short)%></td>
    <td><%= link_to 'Details', blog_path(blog.id) %></td>
    <td><%= link_to "Edit.", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'Delete.', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
<% end %>
</table>
<br>
<div class="link">
  <%= link_to 'New Post',new_blog_path %>
</div>
